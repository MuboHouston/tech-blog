<form class="login-form text-center my-5">
    <h1>
        Welcome back!
    </h1>
    <div class="my-4">
        <div>
            <label for="username-login">Username:</label>
            <br>
            <input type="text" class="w-25 rounded-3 bg-white" id="username-login" />
        </div>
        <div class="my-4">
            <label for="password-login">Password:</label>
            <br>
            <input type="password" class="w-25 rounded-3 bg-white" id="password-login" />
        </div>
        <div>
            <button class="login-btn p-2 rounded-3 mt-1 w-25" type="submit">Login</button>
        </div>
        <p class="m-3">Not a member? <a href="/signup">Create an account!</a></p>
    </div>
</form>


<script src="/javascript/login.js"></script>
<div class="ms-4 my-2">
{{> post-info post}}
</div>

<h3 class="mt-3 ms-4">
    Comments
</h3>

{{> comments post.comments }}

{{#if loggedIn}}
<form class="comment-form m-4">
    <h4 class="mt-3">
        Leave a Comment!
    </h4>
    <div>
        <textarea class="w-50 rounded-3 shadow" name="comment-body"></textarea>
    </div>

    <div>
        <button class="add-comment-btn p-2 rounded-3 mt-1" type="submit">Add Comment</button>
    </div>
</form>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}

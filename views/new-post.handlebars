<section class="mt-3 ms-3">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title" style="font-weight: bold;">Title:</label>
      <br>
      <input type="text" id="post-title" style="width: 28%;" class="bg-white rounded-3 p-1" name="post-title" />
    </div>
    <br>
    <div>
      <label for="post-content" style="font-weight: bold;">Content: </label>
      <br>
       <textarea name="post-content" class="bg-white rounded-3 p-1" rows="10" cols="50" style="line-height: 20px;"></textarea>
      {{!-- <input id="post-content" name="post-content" /> --}}
    </div>
    <button type="submit" class="buttons my-3 rounded-3 p-2" style="width: 15%;">Create</button>
  </form>
</section>


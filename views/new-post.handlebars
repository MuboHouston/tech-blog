<section class="mt-3 ms-3">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title" style="font-weight: bold;">Title:</label>
      <br>
      <input type="text" id="post-title" class="w-25" name="post-title" />
    </div>
    <br>
    <div>
      <label for="post-content" style="font-weight: bold;">Content</label>
      <br>
       <textarea name="post-content" cols="30" rows="10" style="line-height: 20px;"></textarea>
      {{!-- <input id="post-content" name="post-content" /> --}}
    </div>
    <button type="submit" class="buttons mt-3 rounded-3 p-2" style="width: 15%;">Create</button>
  </form>
</section>


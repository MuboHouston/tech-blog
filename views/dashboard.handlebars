{{#if posts.length}}
<section class="mt-3">
    <h2 class="ms-3">Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li class="mt-5">
            {{> post-info post}}
        </li>
        <br />

        <a href="/dashboard/edit/{{post.id}}" class="text-decoration-none">
          <div class="edit-post-btn border border-dark d-inline p-2 rounded-3 text-dark">
            Edit Post
          </div>
        </a>
        {{/each}}
    </ol>
</section>
{{/if}}

<div class="text-center"> 
  <a href="/dashboard/new-post" class=" text-decoration-none">
    <div class="new-post new-post-btn border border-dark p-3 rounded-3 text-dark">
      New Post
    </div>
  </a>
</div>

<script src="/javascript/add-post.js"></script>